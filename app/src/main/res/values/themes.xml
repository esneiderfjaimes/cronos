<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CronosTheme" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.CronosTheme.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="postSplashScreenTheme">@style/Theme.CronosTheme</item>
    </style>

    <style name="Theme.CronosTheme.Splash.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.CronosTheme.Splash.AppWidgetContainer" parent="Theme.CronosTheme.Splash.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>